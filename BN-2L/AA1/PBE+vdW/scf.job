#SBATCH --job-name=my_batch_job
##SBATCH --mail-type=ALL
##SBATCH --mail-user=<user_email>

module purge

module load mkl
module load mpi/latest

export QE_DIR=/mnt/petaStor/brozzesi/CODICI/QE/qe-7.2/bin
export PW=$QE_DIR/pw.x
export FILENAME=scf
export INPUT=$FILENAME.in
export OUTPUT=$FILENAME.out

mpirun --bind-to core -np 56 ${PW} -npools 4 < $INPUT > $OUTPUT
